<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/DarkPrimary</item>
        <item name="colorAccent">@color/AccentColor</item>
        <item name="android:textColorPrimary">@color/PrimaryText</item>
    </style>

    <style name="ToolbarLight" parent="AppTheme">
        <item name="android:textColorPrimary">@color/TextAndIcons</item>
        <item name="android:textColorSecondary">@color/TextAndIcons</item>
    </style>

    <style name="Toolbar.Popup" parent="AppTheme"></style>

    <style name="tv_table_figure">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/tv_table</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="iv_table_img">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/iv_table_img_width</item>
        <item name="android:layout_height">@dimen/iv_table_img_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tv_table_words">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="table_row">
        <item name="android:paddingTop">@dimen/table_row_padding_top</item>
        <item name="android:paddingBottom">@dimen/table_row_padding_bottom</item>
    </style>

</resources>
